<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark_green">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/icv_profile_pic_nav_header"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_75sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_20sdp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/white"
            app:civ_border_overlay="true"

            android:src="@mipmap/ic_launcher"

            />



        <TextView
            android:id="@+id/tv_user_name_nav_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ubaid Siddiqui"
            android:maxLength="15"
            android:textStyle="bold"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/_20sdp"

            />


        <TextView
            android:id="@+id/tv_phone_nav_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="13"
            android:text="+919892327394"
            android:paddingBottom="@dimen/_5sdp"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/_20sdp"

            />

</LinearLayout>

        <ImageButton
            android:id="@+id/right_arrow_nav_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_55sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:src="@drawable/right_arrow_icon_24"
              />


    </LinearLayout>








</LinearLayout>
